#include <stdio.h>
#include <stdarg.h>

int _printf(const char *format, ...)
{
    va_list args;
    va_start(args, format);
    int count = 0; // To keep track of the number of characters printed

    while (*format != '\0')
    {
        if (*format == '%')
        {
            format++; // Move past the '%'
            switch (*format)
            {
                case 'c':
                    // Fetch the next argument (char), and print it
                    putchar(va_arg(args, int)); // 'char' gets promoted to 'int' when passed through va_arg
                    count++;
                    break;

                case 's':
                    // Fetch the next argument (string), and print it
                    const char *str = va_arg(args, const char *);
                    while (*str != '\0')
                    {
                        putchar(*str);
                        str++;
                        count++;
                    }
                    break;

                case '%':
                    // Print the '%' character itself
                    putchar('%');
                    count++;
                    break;

                default:
                    // If the conversion specifier is not recognized, ignore it
                    break;
            }
        }
        else
        {
            // For regular characters, just print them
            putchar(*format);
            count++;
        }
        format++; // Move to the next character in the format string
    }

    va_end(args);
    return count;
}

int main()
{
    char character = 'X';
    char *string = "Hello, world!";

    int num_printed = _printf("Printing a character: %c\n", character);
    num_printed += _printf("Printing a string: %s\n", string);
    num_printed += _printf("Printing a percentage sign: %%\n");

    printf("\nTotal characters printed: %d\n", num_printed);
    return 0;
}
